<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/message_cardview"
        android:layout_width="390dp"
        android:layout_height="370dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        app:cardElevation="40dp"
        app:cardBackgroundColor="@color/backgroundColor"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/announcement_title"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Title"

                android:padding="15dp"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:id="@+id/announcement_line_title"
                android:layout_below="@+id/announcement_title"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFFFFF"
                />


            <TextView
                android:id="@+id/announcement_message"
                android:layout_below="@+id/announcement_line_title"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Message"

                android:padding="15dp"
                android:scrollbars="vertical"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:id="@+id/announcement_line_from"
                android:layout_below="@+id/announcement_message"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFFFFF"
                />

            <TextView
                android:id="@+id/announcement_from"
                android:layout_below="@+id/announcement_line_from"
                android:layout_width="400dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="From"
                android:padding="15dp"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>